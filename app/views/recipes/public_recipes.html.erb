<section>
  <h1 class="text-center">Public Recipes</h1>
  <ul class="list-unstyled d-flex flex-column gap-3"> 
    <%@recipes.each do |recipe|%>
      <li class="d-flex gap-5 border border-2 p-2">
        <div class="w-25">
            <%= link_to recipe_path(recipe) do%>
              <h3 class="fs-3"><%= recipe.name%></h3>
            <%end%>
              <p class="fs-5 fw-bold">By: <%= recipe.user.name%></p>
        </div>
        <div class= "w-75">
          <p class="fs-5 fw-bold">Total Food Items: <%= recipe.food_count%></p>
          <p class="fs-5 fw-bold">Total Price: $<%= recipe.total_price || 0%></p>
        </div>
      </li>
    <%end%>
  </ul>
</section>