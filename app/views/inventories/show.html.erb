<section>
  <div class="d-flex flex-column mb-3 pb-2 border-2 border-dark border-bottom">
    <h1 class="text-center"><%= @inventory.name%></h1>
    <button class="ms-auto">add food button</button>
  </div>
  <table class="table border-top-2">
    <thead>
      <tr class="table-secondary">
        <th class="border-top-0 border border-2">Food</th>
        <th class="border-top-0 border border-2">Quantity</th>
        <th class="border-top-0 border border-2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @inventory.inventory_foods.each do |i| %>
        <tr>
          <td class="border-top-0 border border-2"><%= i.food.name%></td>
          <td class="border-top-0 border border-2"><%= i.quantity%></td>
          <td class="border-top-0 border border-2"><%= button_to "Remove", food_path(i.food.id), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <%= form_with(model: [ @inventory.inventory_foods.build ], local: true) do |f| %>
    <%= f.hidden_field :inventory_id, value: @inventory.id %>
    <%= f.number_field :quantity, placeholder: 'quantity', class: 'form-control mb-2' %>
    <%= f.fields_for :food, @inventory.foods.build do |food_fields| %>
      <%= food_fields.text_field :name, placeholder: 'name', class: 'form-control mb-2' %>
      <%= food_fields.number_field :price, placeholder: 'price', class: 'form-control mb-2' %>
      <%= food_fields.select :measurement_unit, ["mg", "g", "kg"], class: 'form-control mb-2' %>
    <% end %>
    <%= f.submit "add", class: "btn btn-primary" %>
  <% end %>
</section>